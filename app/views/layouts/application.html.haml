!!!
%html

  %head
    %title
      = yield(:title) || "Untitled"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag "application", "formtastic", "formtastic_changes", :cache => "base"
    = stylesheet_link_tag "js_theme/overcast/jquery-ui-1.8.13.custom.css"
    = javascript_include_tag :defaults
    = csrf_meta_tag
    = yield(:head)

  %body
    #container
    
      #header
        %span= link_to "Events", posts_path
        %span= link_to "Categories", categories_path
    
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      

      %div#user_nav 
        -if user_signed_in?
          %p 
            Signed in as
            = link_to current_user.email, edit_user_registration_path
          %p 
            Not you?
            = link_to "Sign out", destroy_user_session_path
        -else
          %p= link_to "Sign_up", new_user_registration_path
          %p= link_to "Sign_in", new_user_session_path
      
      %div#post_nav
        %p= link_to "Post New Event", new_post_path
        %p= link_to "Post New Category", new_category_path

      - if show_title?
        %h1= yield(:title)

      = yield
