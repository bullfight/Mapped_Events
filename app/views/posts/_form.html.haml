= semantic_form_for @post do |f|
  - f.inputs do
    = f.input :name, :label => "Event name"
    /= f.input :rsvp_by, :as => :date_picker
    = f.input :date_of, :start_year => Time.now.year
    = f.input :contact, :hint => "email address of organizer"
    = f.input :category
    = f.input :description
  = f.buttons